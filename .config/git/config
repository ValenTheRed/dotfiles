[init]
	defaultbranch = main
[user]
	name = Pranjal Soni
	email = soni.pranjals17@gmail.com
[core]
	autocrlf = input
	editor = nvim
[alias]
	s = status
	c = commit
	b = branch
	cam = commit --amend
	lo = log --oneline
	gr = log --graph --all --decorate --color --oneline
	# Ref: https://stackoverflow.com/questions/14243380/
	gf = log --graph --all --pretty=format:'%C(auto)%h%d%Creset %s %C(cyan)(%cr)%Creset %C(green)%cn <%ce>%Creset'
	ch = checkout
	chb = checkout -b
[commit]
	# show equivalent to `diff --cached` in the commit message
	verbose = true

# vim: set noet:
