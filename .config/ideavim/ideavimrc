set surround
set commentary

set incsearch
set number
set relativenumber
set ignorecase
set smartcase
set ideajoin

let mapleader = " "

map gr :action ShowUsages<CR>
map <leader>fg :action FindInPath<CR>
map <leader>ff :action RecentFiles<CR>
map <leader>fd :action GotoFile<CR>

map <leader>hr :action Vcs.RollbackChangedLines<CR>
map [c :action VcsShowPrevChangeMarker<CR>
map ]c :action VcsShowNextChangeMarker<CR>

map <leader>rn :action RenameElement<CR>

nnoremap <C-h> <C-w><C-h>
nnoremap <C-l> <C-w><C-l>
nnoremap <C-j> <C-w><C-j>
nnoremap <C-k> <C-w><C-k>
